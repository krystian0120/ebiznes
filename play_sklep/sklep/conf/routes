# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# User CRUD
GET     /user/get/:id               controllers.UserController.getUser(id)
GET     /user/all                   controllers.UserController.getAllUsers()
POST    /user/create                controllers.UserController.createUser()
PUT     /user/update/:id            controllers.UserController.updateUser(id)
DELETE  /user/delete/:id            controllers.UserController.deleteUser(id)

# Car Make CRUD
GET     /car-make/get/:id           controllers.CarMakeController.getCarMake(id)
GET     /car-make/all               controllers.CarMakeController.getAllCarMakes()
POST    /car-make/create            controllers.CarMakeController.createCarMake()
PUT     /car-make/update/:id        controllers.CarMakeController.updateCarMake(id)
DELETE  /car-make/delete/:id        controllers.CarMakeController.deleteCarMake(id)

# Car Model CRUD
