# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# User CRUD
GET     /user/get/:id               controllers.UserController.getUser()
GET     /user/all                   controllers.UserController.getAllUsers()
POST    /user/create                controllers.UserController.createUser()
PUT     /user/update/:id            controllers.UserController.updateUser()
DELETE  /user/delete/:id            controllers.UserController.deleteUser()

# Car Make CRUD
GET     /car-make/get/:id           controllers.CarMakeController.getCarMake()
GET     /car-make/all               controllers.CarMakeController.getAllCarMakes()
POST    /car-make/create            controllers.CarMakeController.createCarMake()
PUT     /car-make/update/:id        controllers.CarMakeController.updateCarMake()
DELETE  /car-make/delete/:id        controllers.CarMakeController.deleteCarMake()

# Car Model CRUD
GET     /car-model/get/:id          controllers.CarModelController.getCarModel()
GET     /car-model/all              controllers.CarModelController.getAllCarModels()
POST    /car-model/create           controllers.CarModelController.createCarModel()
PUT     /car-model/update/:id       controllers.CarModelController.updateCarModel()
DELETE  /car-model/delete/:id       controllers.CarModelController.deleteCarModel()

# Car Version CRUD
GET     /car-version/get/:id        controllers.CarVersionController.getCarVersion()
GET     /car-version/all            controllers.CarVersionController.getAllCarVersions()
POST    /car-version/create         controllers.CarVersionController.createCarVersion()
PUT     /car-version/update/:id     controllers.CarVersionController.updateCarVersion()
DELETE  /car-version/delete/:id     controllers.CarVersionController.deleteCarVersion()

# Car Part CRUD
GET     /part/get/:id               controllers.PartController.getPart()
GET     /part/all                   controllers.PartController.getAllParts()
POST    /part/create                controllers.PartController.createPart()
PUT     /part/update/:id            controllers.PartController.updatePart()
DELETE  /part/delete/:id            controllers.PartController.deletePart()

# Car Part Category CRUD
GET     /part-category/get/:id      controllers.PartCategoryController.getPartCategory()
GET     /part-category/all          controllers.PartCategoryController.getAllPartCategories()
POST    /part-category/create       controllers.PartCategoryController.createPartCategory()
PUT     /part-category/update/:id   controllers.PartCategoryController.updatePartCategory()
DELETE  /part-category/delete/:id   controllers.PartCategoryController.deletePartCategory()
