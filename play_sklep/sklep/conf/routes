GET     /car-model/all              controllers.CarModelController.getAllCarModels()
POST    /car-model/create           controllers.CarModelController.createCarModel()
PUT     /car-model/update/:id       controllers.CarModelController.updateCarModel(id)
DELETE  /car-model/delete/:id       controllers.CarModelController.deleteCarModel(id)

